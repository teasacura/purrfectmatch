<div class="container">
<header class="jumbotron">

  <div class="container">

    <h1><span class="glyphicons glyphicons-cat"></span> Welcome to Purrfect Match</h1>
    <p>View potential adopters and kitties from all over the world!</p>

    <p>
      <%= link_to "Create a Profile", account_type_path, class: "btn btn-primary btn-lg" %>
    </p>

  </div>

</header>

<div class="row text-center" style="display: flex; flex-wrap: wrap;">

  <% @profiles.each do |profile| %>

    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <%= image_tag("#{profile.image_url}") %>
        <div class="caption">
          <h4><%= profile.name %></h4>
        </div>
        <p>
          <%= link_to "More Info", "/#{profile.class.to_s.downcase + 's'}/#{profile.id}", class: "btn btn-primary"  %>
        </p>
      </div>
    </div>
  <% end %>
</div>
</div>
